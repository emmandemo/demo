<div class="row duches">

 <div class="center jumbotron col-md-10"> <!--jumbotron-->
    <!--<h2> The featured charity project needing your help</h2>-->
     <div class="container"> <!--entry removed entry class-->
      <div class="media well well-lg entry"> <!--media-->
        <div class="media-left"><!--media-left-->
         <%= image_tag(@projects.first.image_url) %>
        </div> <!--media-left-->
        <div class="media-body"> <!--media-body-->
         <h1> <%= @projects.first.title %> </h1>
         <%= sanitize(@projects.first.description) %>
         <div class="estimate_line"> <!-- estimate-line-->
          <span class="estimate">Estimate: <%= number_to_currency(@projects.first.estimate) %></span>
           <%= form_tag pledges_path(project_id: @projects.first), method: "post", remote: true do %>
           <%= text_field_tag 'amount',nil,placeholder:'0.00', id: 'new-todo' %>
           <%= submit_tag 'Make Pledge' %>
           <% end %>
         </div> <!-- estimate-line -->
         </div> <!-- media-body -->
       </div> <!--media-->
      <% if !user_signed_in? %>
      <%= link_to "Sign up to Help now!", new_user_registration_path, class: "btn btn-lg btn-success" %>
      <% end %>
    </div> <!--entry-->
  </div> <!--jumbotron-->

