<%= form_for [:admin, @user] do |f| %>
  <div class="row">
  <div class="col-md-1 col-md-offset-1"></div>
  <fieldset class="col-md-6">
   <p>
    <div class="form-group">
     <%= f.label :first_name %>
     <%= f.text_field :first_name, class: "form-control", placeholder: user.first_name %>
    </div>
    <div class="form-group">
     <%= f.label :last_name %>
     <%= f.text_field :last_name, class: "form-control", placeholder: user.last_name %>   
     </div>
    <div class="form-group">
     <%= f.label :email %>
     <%= f.email_field :email, class: "form-control", placeholder: user.email %>
    </div>
    <div class="form-group">
     <%= f.label :featured %>
     <%= f.check_box :featured %>
    </div>
  </p>
     <div class="row">
      <div class="col-md-12 form-submit">
       <%= f.submit "Save", class: "pull-right btn btn-success" %>
       <%= link_to "Back", admin_users_path, class: "pull-left btn btn-warning" %>
      </div>
     </div>

</fieldset>
<div class="col-md-1 col-md-offset-1"></div>
</div>
<% end %>

